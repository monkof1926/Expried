<ScanScreen>:
    selected_date: date_label
    pressed_ok:funSpinner
    itemTextInput:itemName
    MNavigationBar:
    Toolbar:
        title: "List screen"
    BoxLayout:
        pos_hint: {'center_x': .5, 'center_y': .65}
        size_hint: (1,.5)
        Preview:
            id: preview
	        aspect_ratio: '16:9'
    
    MDRaisedButton:
        text: "Take Photo"
        pos_hint: {'center_x': .5, 'center_y': .45}
        on_release: root.photo()

    MDRaisedButton:
        text: "Select Expiry Date"
        pos_hint: {'center_x': .5, 'center_y': .35}
        on_release: root.show_date_picker()

    MDSpinner:
        id: funSpinner
        size_hint: (.1,.1)
        pos_hint: {'center_x': .5, 'center_y': .25}
        active: False

    MDLabel:
        id:date_label
        text:'Select a Date'
        halign: 'center'
        pos_hint: {'center_x': .75, 'center_y': .25}
        font_size: '30dp'
        bold: True

    MDRaisedButton:
        text: "Save Item"
        pos_hint: {'center_x': .5, 'center_y': .15}
        on_release: root.save_item()


    FilteredInput:
        id: itemName
        hint_text: "Enter item name"
        multiline: False
        mode: "fill"
        #theme_text_color: 'Custom'
        #color_mode: 'custom'
        max_text_length: 5
        #text_color: 0,0,1,1
        #text_color_normal: 0,0,1,1
        #text_color_focus: 0,0,1,1
        #color_active: 0,0,0,1
        size_hint: .45,None
        height: '40dp'
        pos_hint: {'center_x': .25, 'center_y': .25}
        fill_color: 1,1,1,.1
